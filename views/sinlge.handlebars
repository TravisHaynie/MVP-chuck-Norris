<article>
  <h2>{{post.title}}</h2>
  <p>Posted by {{post.user.username}} on {{post.createdAt}}</p>
  <p>{{post.content}}</p>

  {{#if logged_in}}
    <form action="/api/posts/{{post.id}}/comments" method="POST">
      <textarea name="content" placeholder="Add a comment..."></textarea>
      <button type="submit">Submit</button>
    </form>
  {{/if}}

  <section>
    <h3>Comments:</h3>
    {{#each post.comments}}
      <div>
        <p>{{this.user.username}} ({{this.createdAt}}): {{this.content}}</p>
      </div>
    {{/each}}
  </section>
</article>
